<h1>Linting questions</h1>

<p>Total: <%= @questions.size %></p>

<p><%= link_to'New Question', new_question_path, class:"fa fa-question-circle-o  fa-2x" %></p>
<table class="table table-hover">
  <tr class="success">
    <th>Text</th>
    <th>Choices</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% @questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td>
          <ul>
            <% question.choices.each do |choice| %>
                <li>
                  <%= choice.text %>
                  <% if choice.correct == 1 %> (correct) <% end %>
                </li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'show', question, class: "fa fa-search-plus fa-1x"  %></td>
        <td><%= link_to 'Edit', edit_question_path(question), class: 'fa fa-pencil fa-1x', style: "color: #B00100"  %></td>
        <td><%= link_to 'Destroy', question, :confirm => 'Estas seguro ?', class: 'fa fa-times-circle fa-1x', :method => :delete %></td>
      </tr>
  <% end %>
</table>
<% content_for(:title) do %>
    All questions
<% end %>
